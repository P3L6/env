include "/opt/homebrew/share/nanorc/*.nanorc"

set autoindent
set linenumbers
set tabsize 4
set tabstospaces
set mouse

set titlecolor magenta,normal
set functioncolor magenta
set keycolor cyan,normal
set numbercolor yellow,normal

bind ^/ comment all
bind M-F nextword main
bind M-B prevword main

# The following match the CLI option: --modernbindings
bind ^Q exit main
bind ^X cut main
bind ^C copy main
bind ^V paste main
bind ^Z undo main
bind ^Y redo main
bind ^W writeout main
bind ^R replace main
bind ^G findnext main
bind ^D findprevious main
bind ^A mark main
bind ^T gotoline main
bind ^E execute main

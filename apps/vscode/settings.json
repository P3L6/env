{
    "breadcrumbs.filePath": "off",

    "diffEditor.renderSideBySide": false,

    "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,

    "editor.tabSize": 2,
    "editor.trimAutoWhitespace": false,
    "editor.lightbulb.enabled": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.dragAndDrop": false,

    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.minimap.maxColumn": 100,

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,
    "explorer.sortOrder": "mixed",

    "eslint.run": "onSave",
    "extensions.ignoreRecommendations": false,
    "extensions.closeExtensionDetailsOnViewChange": true,

    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.enableStatusBarSync": false,
    "git.rebaseWhenSync": true,
    "githubPullRequests.defaultDeletionMethod.selectLocalBranch": false,
    "githubPullRequests.fileListLayout": "flat",

    "latex-workshop.view.pdf.viewer": "tab",
    "projectManager.showProjectNameInStatusBar": false,
    "terminal.integrated.cursorStyle": "underline",

    "typescript.updateImportsOnFileMove.enabled": "never",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "window.zoomLevel": 0,
    "window.title": "${activeEditorShort}${separator}${rootName}${separator}${activeEditorMedium}",
    "window.newWindowDimensions": "offset",

    "workbench.activityBar.visible": true,

    //"workbench.colorTheme": "One Dark Pro",
    "workbench.colorTheme": "Atom One Light",
    "workbench.preferredLightColorTheme": "Atom One Light",
    "workbench.preferredDarkColorTheme": "One Dark Pro",
    "workbench.colorCustomizations": {"terminalCursor.foreground": "#C456FF"},

    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": false,
    "workbench.editor.limit.value": 8,
    "workbench.editor.tabCloseButton": "left",

    "workbench.list.automaticKeyboardNavigation": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tree.indent": 12,

    "markdown.preview.breaks": true
}
